{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "webapp/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "webapp/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/webapp/dist/assets/$1"
    },
    {
      "src": "/design/(.*)",
      "dest": "/design/$1"
    },
    {
      "src": "/(ask-.*|pair/.*|env-ok)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/webapp/dist/$1"
    }
  ],
  "env": {
    "OPENAI_API_KEY": "@openai-api-key"
  }
}
